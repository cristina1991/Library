@model Library.Data.Entities.Author

@{
    ViewBag.Title = "Author";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row site-container">
        <div class="page-title">
            Modifica autor
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row single-author-container">
            <div class="col-md-6 singleAuthorPhoto">
                <img src="@Model.ImgPath" alt="author" />
            </div>
            <div class="col-md-6 singleAuthorDetails">
                <div class="row form-group">
                    @Html.LabelFor(model => model.Name, "Nume", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="btn btn-primary addAuthorImages" id="addAuthorImage_@Model.Id">Adauga imagine</div>
                        <input type="submit" value="Salveaza" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div>
            @Html.ActionLink("Inapoi la autori", "Index", null, new { @class = "btn btn-default" })
        </div>
        <input id="inputAuthorPhotoUpload" type="file" accept="image/*" data-authorId="" style="display:none" hidden />
    </div>
}

