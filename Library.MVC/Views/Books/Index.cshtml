@model IEnumerable<Library.Data.Entities.Book>

@{ 
    ViewBag.Title = "Books";
}


<div class="site-container">
    <div class="row every-page-header">
        <div class="page-title col-md-9">Books</div>
        <div class="button-right col-md-3">
            @Html.ActionLink("Add Book", "Create", null, htmlAttributes: new { @class = "btn btn-primary actions-btn" })
        </div>
    </div>
    <div class="row ">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("SingleBook", "Books", new { bookId = item.Id })">
                <div class="col-md-3 booksContainer" id="bookContainer_@item.Id">
                    <div class="bordered-entity">
                        <img class="bookImage" src="#" />

                        <div class="row entity-rows">
                            <div class="col-md-3">Title:</div>
                            <div class="col-md-9">@item.Title</div>
                        </div>

                        <div class="row entity-rows">
                            <div class="col-md-3">Author:</div>
                            <div class="col-md-9">@item.Author.Name</div>
                        </div>

                        <div class="row entity-rows">
                            <div class="col-md-3">Genre:</div>
                            <div class="col-md-9">@item.Genre.Name</div>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

<div class="modalInfo">
    @Html.Partial("DeleteBookModal")
</div>

