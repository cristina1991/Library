@model IEnumerable<Library.Data.Entities.Author>

@{ 
    ViewBag.Title = "Authors";
}

<div class="site-container">
    <div class="row every-page-header">
        <div class="page-title col-md-9">Authors</div>
        <div class="button-right col-md-3">
            @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary actions-btn" })
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Born")
            </th>
            <th>
                @Html.Label("City")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Born)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { authorId = item.Id }, new { @class = "btn btn-primary" })
                    <button id="deleteAuthor_@item.Id" class="btn btn-primary deletesAuthor" type="button">Delete</button>
                </td>
            </tr>
        }

    </table>
</div>
<div class="modalInfo">
    @Html.Partial("DeleteAuthorModal")
</div>
