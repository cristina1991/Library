@model IEnumerable<Library.Data.Entities.Genre>

@{
    ViewBag.Title = "Genre";
}

<div class="site-container">
    <div class="row every-page-header">
        <div class="page-title col-md-9">Genres</div>
        <div class="button-right col-md-3">
            @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary actions-btn" })
        </div>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { genreId = item.Id }, new { @class = "btn btn-primary" }) 
                    <button id="deleteGenre_@item.Id" class="btn btn-primary deletesGenre" type="button">Delete</button>
                </td>
            </tr>
        }

    </table>
</div>
